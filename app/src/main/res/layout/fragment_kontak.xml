<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KontakFragment"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_dehaze_24"
            android:padding="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/desc_icon" />

        <TextView
            android:id="@+id/kontak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kontak"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_add_24"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/desc_add" />

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/baseline_search_24"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/desc_search" />

        <androidx.cardview.widget.CardView
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/kontak"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="32dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:id="@+id/iconSearchLeft"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_search_24"
                    app:tint="@color/black"
                    android:contentDescription="@string/desc_icon" />

                <EditText
                    android:id="@+id/inputSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="@string/cari"
                    android:background="@android:color/transparent"
                    android:textColor="#000000"
                    android:textColorHint="#555555"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:autofillHints="no" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvNoResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tidak_ada_kontak"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ScrollView
            android:id="@+id/scrollKontak"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/searchBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_margin="8dp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/a1"
                        layout="@layout/contact_row"
                        android:tag="a1_name|a1_phone" />

                    <include
                        android:id="@+id/a2"
                        layout="@layout/contact_row"
                        android:tag="a2_name|a2_phone" />

                    <include
                        android:id="@+id/a3"
                        layout="@layout/contact_row"
                        android:tag="a3_name|a3_phone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="#D0D0D0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_margin="8dp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <include
                        android:id="@+id/b1"
                        android:tag="b1_name|b1_phone"
                        layout="@layout/contact_row" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="#D0D0D0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_margin="8dp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <include
                        android:id="@+id/c1"
                        android:tag="c1_name|c1_phone"
                        layout="@layout/contact_row" />

                    <include
                        android:id="@+id/c2"
                        android:tag="c2_name|c2_phone"
                        layout="@layout/contact_row" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="#D0D0D0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_margin="8dp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <include
                        android:id="@+id/d1"
                        layout="@layout/contact_row"
                        android:tag="d1_name|d1_phone" />

                    <include
                        android:id="@+id/d2"
                        layout="@layout/contact_row"
                        android:tag="d2_name|d2_phone" />

                    <include
                        android:id="@+id/d3"
                        layout="@layout/contact_row"
                        android:tag="d3_name|d3_phone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="#D0D0D0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_margin="8dp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <include
                        android:id="@+id/e1"
                        layout="@layout/contact_row"
                        android:tag="e1_name|e1_phone" />

                    <include
                        android:id="@+id/e2"
                        layout="@layout/contact_row"
                        android:tag="e2_name|e2_phone" />

                    <include
                        android:id="@+id/e3"
                        layout="@layout/contact_row"
                        android:tag="e3_name|e3_phone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="#D0D0D0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_margin="8dp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <include
                        android:id="@+id/f1"
                        layout="@layout/contact_row"
                        android:tag="f1_name|f1_phone" />

                    <include
                        android:id="@+id/f2"
                        layout="@layout/contact_row"
                        android:tag="f2_name|f2_phone" />

                    <include
                        android:id="@+id/f3"
                        layout="@layout/contact_row"
                        android:tag="f3_name|f3_phone" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
