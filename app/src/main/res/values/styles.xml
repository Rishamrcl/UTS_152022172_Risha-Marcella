<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="SplashTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:padding">6dp</item>
    </style>
    <style name="SplashName">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:shadowColor">#30000000</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="SplashNim">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:shadowColor">#20000000</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1.5</item>
    </style>
    <style name="NoActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="CircularImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



</resources>
